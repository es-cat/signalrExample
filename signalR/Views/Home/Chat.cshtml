@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Chat</title>
</head>
<body>
<h2>Chat</h2>

<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />
    <ul id="discussion">
    </ul>
    <img class="js_siteurlQ" />
    <a class="js_siteurlQA" target="_blank" >open new client</a>
</div>

<!--Script references. -->
<!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
<!--Reference the SignalR library. -->
<script src="/Scripts/jquery-1.6.4.min.js"></script>
<script src="/Scripts/jquery.signalR-1.1.4.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="/signalr/hubs"></script>
<!--SignalR script to update the chat page and send messages.--> 
<script>

        var cookieCreate = function (name, value, days) {
            if (days) {
                var date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                var expires = "; expires=" + date.toGMTString();
            }
            else var expires = "";
            document.cookie = name + "=" + value + expires + ";path=/";
        };
        var cookieRead = function (name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        };

        var groupid = '@ViewBag.groupid';
        cookieCreate('group', groupid, 7);
        var myid = '';
        // Reference the auto-generated proxy for the hub.  
        var chat = $.connection.chatHub;
        // Create a function that the hub can call back to display messages.
        chat.client.addNewMessageToPage = function (name, message) {
            // Add the message to the page. 
            $('#discussion').append('<li><strong>' + htmlEncode(name)
                + '</strong>: ' + htmlEncode(message) + '</li>');
        };
        // Get the user name and store it to prepend to messages.
        $('#displayname').val(prompt('Enter your name:', ''));
        // Set initial focus to message input box.  
        $('#message').focus();
        // Start the connection.
        $.connection.hub.start().done(function (t) {
            $('#sendmessage').click(function () {
                // Call the Send method on the hub. 
                chat.server.send(groupid, $('#displayname').val(), $('#message').val());
                // Clear text box and reset focus for next comment. 
                $('#message').val('').focus();
            });
            chat.server.join(t.id, groupid);
            myid = t.id;
            $('.js_siteurlQ').attr('src', 'http://chart.apis.google.com/chart?cht=qr&chs=180x180&chl=' + encodeURIComponent("http://" + location.host + location.pathname + '?groupid=' + groupid));
            $('.js_siteurlQA').attr('href', "http://" + location.host + location.pathname + '?groupid=' + groupid);
        });
    // This optional function html-encodes messages for display in the page.
    function htmlEncode(value) {
        var encodedValue = $('<div />').text(value).html();
        return encodedValue;
    }

</script>
</body>
</html>
